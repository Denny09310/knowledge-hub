@namespace KnowledgeHub.Components

@using KnowledgeHub.Components.Layout

<nav class="bg-white top-0 start-0 border-gray-200 fixed z-20 w-full border-b dark:bg-gray-900 dark:border-gray-600">
    <div class="p-4 mx-auto flex max-w-screen-xl flex-wrap items-center justify-between">
        <button data-collapse-toggle="main-navbar"
                type="button"
                class="p-2 w-10 h-10 text-gray-500 inline-flex items-center justify-center rounded-lg text-sm hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 md:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="main-navbar" aria-expanded="false">
            <Bars />
            <span class="sr-only">Open main menu</span>
        </button>
        <a href="https://flowbite.com/" class="space-x-3 hidden items-center rtl:space-x-reverse md:flex">
            <img src="https://flowbite.com/docs/images/logo.svg" class="h-8" alt="Flowbite Logo" />
            <span class="self-center whitespace-nowrap text-2xl font-semibold dark:text-white">Flowbite</span>
        </a>
        <div class="flex md:order-2">
            <Searchbar Class="me-2 hidden md:block" />
            <AuthorizeView>
                <div class="w-10 h-10 bg-gray-100 relative overflow-hidden rounded-full dark:bg-gray-600" title="@context.User.Identity!.Name">
                    <svg class="w-12 h-12 text-gray-400 -left-1 absolute" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                </div>
            </AuthorizeView>
        </div>
        <div class="hidden w-full items-center justify-between md:flex md:w-auto md:order-1" id="main-navbar">
            <Searchbar Class="mt-3 md:hidden" />
            <NavMenu />
        </div>
    </div>
</nav>