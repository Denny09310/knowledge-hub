@namespace KnowledgeHub.Components

<div class="relative @Class">
    <div class="inset-y-0 start-0 ps-3 pointer-events-none absolute flex items-center">
        <Search Class="w-4 h-4 text-gray-500 dark:text-gray-400" />
        <span class="sr-only">Search icon</span>
    </div>
    <input type="text" id="search-navbar" class="p-2 ps-10 text-gray-900 border-gray-300 bg-gray-50 block w-full rounded-lg border text-sm focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search...">
</div>

@code
{
    [Parameter]
    public string? Class { get; set; }
}