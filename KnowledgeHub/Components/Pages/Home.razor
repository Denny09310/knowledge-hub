@page "/"
@attribute [StreamRendering]

@inject ArticlesManager ArticlesManager

<a href="Articles/Editor"
   class="text-white bg-blue-700 px-4 py-2 rounded-lg text-center text-sm font-medium hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
    Create Article
</a>

@if (isLoading)
{
    <PageLoader />
}
else if (articles == null)
{
    <DangerAlert Message="No articles found yet." />
}
else
{
    <div class="gap-2 flex flex-col">
        @foreach (var article in articles)
        {
            <a href="Articles/@article.Id">@article.Title</a>
        }
    </div>
}

@code 
{
    private List<Article>? articles;
    private bool isLoading;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            var result = await ArticlesManager.GetArticlesAsync();
            articles = result.Items;
        }
        finally
        {
            isLoading = false;
        }
    }
}
